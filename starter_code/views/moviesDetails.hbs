<div>
  {{#unless movie}}
  <p> no movies yet </p>
  {{/unless}}

  {{#if movie}}


  <section id="movie-detail">
    <img src="{{movie.image}}">
    <div id="text-details">
      <a href="/movies">Go back</a>
      <h4> {{movie.title}}</h4>
      <h3>Director: {{movie.director}}</h3>
      <ul>
        {{#each movie.stars}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      <p>{{movie.description}}</p>
      <ul>
        {{#each movie.showtimes}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>

    {{/if}}

</div>

